alias getopt=$(brew info gnu-getopt | grep "^$(brew --prefix)" | cut -d ' ' -f1)/bin/getopt


## --- docker
alias dok='eval $(docker-machine env default)'
alias dok-rm-stop='docker rm $(docker ps -a -q)'
alias dok-rmi-none='docker rmi $(docker images | grep "^<none>" | sed -e "s/[ \t][ \t]*/ /g" | cut -d " " -f 3)'
alias jek='docker run --rm -v "$PWD:/src" -p 4000:4000 grahamc/jekyll'

alias ora='docker run --shm-size=1g -p 1521:1521 -p 8080:8080 -v $HOME/var/lib/docker/db/espin:/u01/app/oracle/oradata oracle/database:11.2.0.2-xe'
alias sqlcli='~/tools/sqlcl/bin/sql system/cucu@//$(docker-machine ip default):1521/XE'

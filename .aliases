# manage dotfiles
alias home="git --work-tree=$HOME --git-dir=$HOME/.dotfiles/.git"

# disk usage with human sizes and minimal depth
alias du1='du -h --max-depth=1'
alias fn='find . -name'
alias hi='history | tail -20'
alias h=history

alias cls=clear

# safe aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

